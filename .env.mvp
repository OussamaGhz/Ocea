# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=pond_monitoring

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MQTT Configuration
MQTT_BROKER_HOST=broker.hivemq.com
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PATTERN=sensors/+

# FastAPI Server
API_HOST=0.0.0.0
API_PORT=8080
DEBUG=true

# Logging
LOG_LEVEL=INFO

# Twilio SMS Configuration (Get these from Twilio Console)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number
ALERT_PHONE_NUMBER=+1234567890   # Phone number to receive alerts

# Sensor Thresholds (Adjust these based on your pond requirements)
PH_MIN=6.5
PH_MAX=8.5
TEMPERATURE_MIN=20.0
TEMPERATURE_MAX=30.0
DISSOLVED_OXYGEN_MIN=5.0
DISSOLVED_OXYGEN_MAX=15.0
TURBIDITY_MAX=10.0
NITRATE_MAX=40.0
NITRITE_MAX=0.5
AMMONIA_MAX=0.5
WATER_LEVEL_MIN=0.5
WATER_LEVEL_MAX=3.0
